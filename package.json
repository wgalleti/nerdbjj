    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "sharp": "^0.34.2",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
