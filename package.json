{
  "name": "ebook-landing",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "nerdbjj": {
    "observacao": "Sempre utilize yarn para instalar, remover ou atualizar dependências.",
    "nodeVersion": "20.x (LTS)",
    "formato": "ESLint + Prettier (executado automaticamente ao salvar no VSCode)",
    "atualizacao": "Use o script update-deps.sh para atualizar as principais libs.",
    "importante": "Antes de subir alterações, rode 'yarn lint' e garanta que não há erros de linting."
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
